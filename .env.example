# CrewInsight Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (for production use)
OPENAI_API_KEY=sk-your-openai-key-here
CREWAI_API_KEY=your-crewai-key-here

# Application Settings
APP_ENV=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8501

# Feature Flags
ENABLE_AUTHENTICATION=true
ENABLE_ANALYTICS=false

# Data Sources
TECHCRUNCH_API_KEY=optional
BLOOMBERG_API_KEY=optional
REUTERS_API_KEY=optional

# Database (for production)
DATABASE_URL=sqlite:///crewinsight.db
# DATABASE_URL=postgresql://user:password@localhost/crewinsight

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100
MAX_ANALYSES_PER_DAY=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=crewinsight.log

# Notes:
# - For demo/development: These values are optional
# - For production: Configure all relevant keys
# - Never commit .env file to version control
# - Use environment-specific files: .env.development, .env.production
